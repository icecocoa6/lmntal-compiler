/*
  nakano---
  ドラゴン曲線を描画します。

*/
{
window.
size(640,530).
name("hoge").
	
	%定数
	now(1).
	
	a(179,140,400,350, 10).
	
	a(AX,AY,BX,BY,N) :- CX = AX+(BX-AX+AY-BY)/2 , CY=BY+(BX-AX+AY-BY)/2 ,N > 0 | a(AX,AY,CX,CY,N-1),a(BX,BY,CX,CY,N-1).
	a(AX,AY,BX,BY,N),now(NOW) :- CX = AX+(BX-AX+AY-BY)/2 , CY=BY+(BX-AX+AY-BY)/2 ,N = 0,int(NOW) |
	{
	draw.
	name(NOW).
	getpic("line").
	position(AX,AY).
	size(CX,CY).
	},{
	draw.
	name(NOW+1).
	getpic("line").
	position(BX,BY).
	size(CX,CY).
	},now(NOW+2).
	
}.
