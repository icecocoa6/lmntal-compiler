/* four queens */

init{
r(1), r(2), r(3), r(4). //
u(2), u(3), u(4), u(5), u(6), u(7), u(8). //
d(-3), d(-2), d(-1),
d(0), d(1), d(2), d(3). //

// atom : 36

c(1).
c(C), r(R), u(U), d(D) :-
    C=<8, U=:=R+C, D=:=R-C, C1=C+1 |
    queen(C,R), c(C1).
}.
