/* eight queens */

init{
r(1), r(2), r(3), r(4), r(5).
u(2), u(3), u(4), u(5), u(6), u(7), u(8), u(9), u(10).
d(-5), d(-4), d(-3), d(-2), d(-1),
d(0), d(1), d(2), d(3), d(4).

c(1).
c(C), r(R), u(U), d(D) :-
    C=<5, U=:=R+C, D=:=R-C, C1=C+1 |
    queen(C,R), c(C1).
}.
init{$p,@p} :- init{$p,@p}.
init{c(6),$p,@p} :- end{c(6),$p,@p}.