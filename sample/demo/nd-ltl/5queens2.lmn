/* five queens */

init{
q{
r(1), r(2), r(3), r(4), r(5).
c(1), c(2), c(3), c(4), c(5).
u(2), u(3), u(4), u(5), u(6), u(7), u(8), u(9), u(10).
d(-4), d(-3), d(-2), d(-1), d(0), d(1), d(2), d(3), d(4).

c(C), r(R), u(U), d(D) :- U=:=R+C, D=:=R-C | queen(C,R).
}.
q{$p,@p} :- \+($p=(c(X),$q[X])) | stopped{$p,@p}.
}.
init{$p,@p} :- init{$p,@p}.
init{stopped{$p,@p},@q} :- end{stopped{$p,@p},@q}.
