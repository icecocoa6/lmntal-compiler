// e(E0, E1), e(E1, E2), e(E2, E0) ==> loop(E0, E1, E2).
// e(0, 1), e(1, 2), e(2, 0), e(0, 3), e(3, 2).


e(E00, E10), e(E11, E20), e(E21, E01)
	:- E00=E01, E10=E11, E20=E21, uniq(E00, E10, E20) |
e(E00, E10), e(E11, E20), e(E21, E01), loop(E00, E10, E20).

e(0, 1), e(1, 2), e(2, 0), e(0, 3), e(3, 2).
