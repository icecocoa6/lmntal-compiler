{
module(oo).

/**
 * オブジェクトの定義モジュールを消去します
 */
use@@
oo.clean :- ({module(M), @p} :- unary(M) | ()).

/**
 * 継承
 */
extends@@
oo.extends({$p, @p}) :- $p, @p.

