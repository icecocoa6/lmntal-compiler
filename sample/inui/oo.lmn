//H={Res=oo.return(Object), $p, @p}/ :- ground(Object) |
//	H={$p, @p}, Res=Object.

/**
 * 参照のコピー
 */
ref@@
H=oo.ref(Object, Ref) :- class(Object, "java.lang.Object") | H=Object, Ref=Object.
ref@@
H=oo.ref ({$p}, Ref)                    :- H={$p, +Ref}.
ref2@@
H=oo.ref2({$p}, Ref1, Ref2)             :- H={$p, +Ref1, +Ref2}.
ref3@@
H=oo.ref3({$p}, Ref1, Ref2, Ref3)       :- H={$p, +Ref1, +Ref2, +Ref3}.
ref4@@
H=oo.ref4({$p}, Ref1, Ref2, Ref3, Ref4) :- H={$p, +Ref1, +Ref2, +Ref3, +Ref4}.

/**
 * GC
 */
gc@@
gc(Object) :- class(Object, "java.lang.Object") | ().

/**
 * null
 */
null@@
H=oo.null :- H={}.
}.
