/* 
 * オブジェクトをgroundで持つ
 */
{
module(line).
H=line.new(Start, End) :-
	H=line(Start, End).
H=line.new(X1, Y1, X2, Y2) :-
	H=line(point.new(X1, Y1), point.new(X2, Y2)).
H=length(line(Start, End), Length) :- H=line(
	getY(getX(Start, X1), Y1),
	getY(getX(End,   X2), Y2),
	),
	Length=math.sqrt((X1-X2)*(Y1-Y2)).
	
H=getStart(line(Start, End), ResStart) :- ground(Start) |
	H=line(Start, End), ResStart=Start.
H=getEnd(line(Start, End), ResEnd) :- ground(End) |
	H=line(Start, End), ResEnd=End.
}.
