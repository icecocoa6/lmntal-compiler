{
module(biginteger).

H='+'(A, B) :- int(A),int(B),A+B=C | H=C.
H='-'(A, B) :- int(A),int(B),A-B=C | H=C.
H='*'(A, B) :- int(A),int(B),A*B=C | H=C.
H='/'(A, B) :- int(A),int(B),A/B=C | H=C.
H='mod'(A, B) :- int(A),int(B),A mod B = C | H=C.
H=biginteger.abs(N) :- int(N),N<0 | H=-1*N.
H=biginteger.abs(N) :- int(N),N>=0 | H=N.
}.
