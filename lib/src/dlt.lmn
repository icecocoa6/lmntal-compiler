{
module(dlt).

/**
 *  module: bind
 *    create ServerSocket and AcceptThread
 */
dlt.bind(Port,Cmd) :- int(Port) |
  dlt.bound(Cmd,Obj),
  Obj = [:/*inline*/
    int port = Integer.parseInt(me.nth(0));
    try {
      ServerSocket servSock = new ServerSocket(port);
      AcceptThread at = new AcceptThread(servSock,(Membrane)mem);
      Functor atFunc = new ObjectFunctor(at);
      Atom atAtom = mem.newAtom(atFunc);
      at.setObjAtom(atAtom);
      mem.relinkAtomArgs(atAtom,0,me,1);
    } catch(IOException e) {
      e.printStackTrace();
    }
    me.nthAtom(0).remove();
    me.remove();
  :](Port).

/**
 *  module: bound
 *    AcceptThread starts running
 */
dlt.bound([accept(Send,Recv)|T],Obj) :- 
  dlt.bound([accepting(Send,Recv)|T],O),
  O=[:/*inline*/
    ObjectFunctor atFunc = (ObjectFunctor)me.nthAtom(0).getFunctor();
    AcceptThread at = (AcceptThread)atFunc.getObject();
    at.start();
    mem.unifyAtomArgs(me,0,me,1);
    me.remove();
  :](Obj).
  
/**
 *  rule: close
 *    close ServerSocket
 */
close @@
dlt.bound([close|T],Obj) :-
  closed(T),
  [:/*inline*/
    ObjectFunctor objFunc = (ObjectFunctor)me.nthAtom(0).getFunctor();
    ServerSocket servSock = (ServerSocket)objFunc.getObject();
    try {
      servSock.close();
    } catch(IOException e) {
      e.printStackTrace();
    } 
  :](Obj).
  
  
/**
 *  module: connect
 *    connect to remote server
 */
 
dlt.connect(Host,Port,Send,Recv) :- string(Host),int(Port) |
  dlt.socket(Send,Recv,Obj),
  Obj = [:/*inline*/
    String host = me.nth(0);
    int port = Integer.parseInt(me.nth(1));
    try {
      InetAddress ip = InetAddress.getByName(host);
      Socket sock = new Socket(ip,port);
      BufferedReader reader = 
        new BufferedReader(new InputStreamReader(sock.getInputStream()));
      PrintWriter writer = new PrintWriter(sock.getOutputStream());
      ReaderThread rt = new ReaderThread(sock,reader,(Membrane)mem);
      Vector obj = new Vector(3);
      obj.add(sock);
      obj.add(writer);
      obj.add(rt);
      Functor objFunc = new ObjectFunctor(obj);
      Atom objAtom = mem.newAtom(objFunc);
      rt.setObjAtom(objAtom);
      mem.relinkAtomArgs(objAtom,0,me,2);
      mem.makePerpetual();
      System.out.println("mem.perpetual = "+mem.perpetual);
      rt.start();
    } catch(IOException e) {
      e.printStackTrace();
    }
    me.nthAtom(0).remove();
    me.nthAtom(1).remove();
    me.remove();
  :](Host,Port).

/**
 *  rule: send
 *    send data to remote socket
 */
send @@
dlt.socket([H|T],Recv,Obj) :- string(H) |
  dlt.socket(T,Recv,O),
  O = [:/*inline*/
    String data = me.nth(0);
    ObjectFunctor objFunc = (ObjectFunctor)me.nthAtom(1).getFunctor();
    Vector obj = (Vector)objFunc.getObject();
    PrintWriter writer = (PrintWriter)obj.get(1);
    writer.println(data);
    writer.flush();
    mem.unifyAtomArgs(me,1,me,2);
    me.nthAtom(0).remove();
    me.remove();
  :](H,Obj).

/**
 *  rule: close
 *    close Socket and stop ReaderThread
 */
close @@
dlt.socket([close|T],Recv,Obj) :- 
  closed(T,Recv),
  [:/*inline*/
    ObjectFunctor objFunc = (ObjectFunctor)me.nthAtom(0).getFunctor();
    Vector obj = (Vector)objFunc.getObject();
    ((PrintWriter)obj.get(1)).close();
    ((ReaderThread)obj.get(2)).stop();
  :](Obj).
}